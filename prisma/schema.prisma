generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Counter {
  id        Int      @id @default(autoincrement())
  key       String   @unique   // например: "hero_focus"
  value     Int      @default(12000)
  updatedAt DateTime @updatedAt
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  message   String
  createdAt DateTime @default(now())
}
